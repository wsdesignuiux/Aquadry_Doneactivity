<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <customfonts.TextView_Bold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textColor="#4d4d4d"
            android:text="Thank You !"
            android:textSize="20dp"
            android:gravity="center"
            android:src="@drawable/btn"/>

        <customfonts.Regular_Textview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="For placing order"
            android:textSize="14dp"
            android:gravity="center"
            android:src="@drawable/btn"/>

        <ImageView android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="62dp"
            android:src="@drawable/correct"/>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Order Id"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:src="@drawable/btn"/>


                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="AD105"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Pick up"
                    android:textSize="12dp"
                    android:src="@drawable/btn"/>


                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="Today 11:30 am"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Delivery"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:src="@drawable/btn"/>


                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="Tommorow 9:30 am"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Payable"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:src="@drawable/btn"/>


                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/dark_blue"
                    android:text="$ 3.50"
                    android:textSize="14dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginLeft="16dp"                />
                />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <customfonts.Regular_Textview
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="@color/white"
        android:background="@color/dark_blue"
        android:text="DONE"
        android:textSize="15dp"
        android:gravity="center"
        android:src="@drawable/btn"/>

</RelativeLayout>
